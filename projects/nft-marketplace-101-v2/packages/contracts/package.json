  "homepage": "https://github.com/rmolinamir/learning-solidity#readme",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@openzeppelin/contracts": "4.4.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "7.1.4",
    "@types/faker": "5.5.9",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.42",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "chai-as-promised": "7.1.1",
    "chai-bignumber": "3.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "faker": "5.5.3",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.7",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.18",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "prebuild": "npm run contracts:compile",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf  ./coverage ./coverage.json ./src/artifacts ./src/cache ./src/types",
    "contracts:compile": "npx hardhat compile",
    "postcontracts:compile": "npm run contracts:types",
    "contracts:coverage": "npm typechain && npx hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "contracts:deploy": "npx hardhat scripts/deploy.ts",
    "contracts:deploy:local": "npx hardhat run --network localhost scripts/deploy.ts",
    "contracts:start": "npx hardhat node",
    "contracts:test": "npx hardhat test",
    "contracts:types": "rm -rf ./src/types && npx hardhat typechain",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "start": "npm run contracts:start",
    "test": "npm run contracts:test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmolinamir/learning-solidity.git"
  },
  "bugs": {
    "url": "https://github.com/rmolinamir/learning-solidity/issues"
  }
}
